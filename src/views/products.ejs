<html>
    <body>
        <h1>Products</h1>
        <table>
            <tr>
                <%products.map((product) => {%>
                    <td>
                        <h3><%=product.name%></h3>   
                        <img height="200px" src="<%=product.image%>"></img>    </br>           
                        <a href="./products/<%=product._id%>"><%=product.name%></a>
                    </td>
        
                <%}) %>

            </tr>
        
        </table>
    </body>
</html>